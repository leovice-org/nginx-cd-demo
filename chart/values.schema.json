{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NGINX Web Server Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "The repository of the NGINX image."
        },
        "tag": {
          "type": "string",
          "description": "The tag of the NGINX image."
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the Kubernetes service.",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
        }
      }
    }
  }
}
